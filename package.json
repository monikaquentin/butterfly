{
  "name": "butterfly",
  "version": "v0.1",
  "description": "NodeJS Server - TypeScript",
  "main": "index.ts",
  "type": "commonjs",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/monikaquentin/butterfly.git"
  },
  "bugs": {
    "url": "https://gitlab.com/monikaquentin/butterfly/-/issues",
    "email": "re@redvelvet.me"
  },
  "keywords": [
    "Node.js",
    "TypeScript",
    "server",
    "backend",
    "API",
    "jsonrpc"
  ],
  "author": "<re@redvelvet.me> (https://redvelvet.me)",
  "contributors": [
    "<re@redvelvet.me> (https://redvelvet.me)"
  ],
  "license": "GPL-3.0",
  "scripts": {
    "prod": "nodemon ./dist/bin/index.js",
    "dev": "tsc-watch --onSuccess \"nodemon ./index.ts\"",
    "build": "tsc",
    "lint": "prettier . --check --config .prettierrc.js && eslint \"bin/*.{ts,tsx,d.ts}\" --report-unused-disable-directives --max-warnings 0",
    "lint:fmt": "prettier . --write --config .prettierrc.js",
    "ext": "rm -rf node_modules dist package-lock.json yarn.lock .env *.log *.pem"
  },
  "pre-commit": [
    "lint"
  ],
  "engines": {
    "node": ">= 18.18.0",
    "npm": ">= 9.6.7",
    "yarn": ">= 1.22.19"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "confidence": "^5.0.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "express-session": "^1.17.3",
    "express-useragent": "^1.0.15",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "module-alias": "^2.2.3",
    "mongoose": "^7.5.4",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/confidence": "^1.4.32",
    "@types/connect-flash": "^0.0.38",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/express-session": "^1.17.8",
    "@types/express-useragent": "^1.0.3",
    "@types/morgan": "^1.9.6",
    "@types/passport": "^1.0.13",
    "@types/passport-http": "^0.3.9",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "eslint": "^8.50.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  },
  "_moduleAliases": {
    "@root": "./dist/bin",
    "@controllers": "./dist/bin/controllers",
    "@helpers": "./dist/bin/helpers",
    "@middlewares": "./dist/bin/middlewares"
  },
  "nodemonConfig": {
    "ignore": [
      "./exclude/files/**/*"
    ],
    "delay": 0
  }
}
